{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
  "apiVersion": 3,
  "name": "sg/map",
  "title": "Carte intégrée",
  "description": "Afficher une carte avec un point de localisation",
  "category": "common",
  "icon": "location",
  "textdomain": "sg-blocks",
  "attributes": {
    "meta_meeting_point": {
      "type": "boolean",
      "default": false
    },
    "address": {
      "type": "string",
      "default": ""
    },
    "lat": {
      "type": "number"
    },
    "lng": {
      "type": "number"
    },
    "zoom": {
      "type": "number",
      "default": 5
    },
    "id": {
      "type":"string",
      "selector": ".sg-map",
      "source": "attribute",
      "attribute": "id"
    }
  },
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
