{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
  "apiVersion": 3,
  "name": "sg/query",
  "title": "SG Boucle Publications",
  "description": "Récupérer des publications",
  "category": "sg-blocks",
  "attributes": {
    "queryId": {
      "type": "number"
    },
    "relatedQuery": {
      "type": "boolean",
      "default": false
    },
    "orderBy": {
      "type": "string",
      "enum": ["date", "title", "rand", "featured"],
      "default": "date"
    },
    "order": {
      "type": "string",
      "enum": ["asc", "desc"],
      "default": "desc"
    },
    "queryPostType": {
      "type": "string",
      "default": "post"
    },
    "queryTaxonomy": {
      "type": "string"
    },
    "queryTaxonomyTerms": {
      "type": "array",
      "default": []
    },
    "postNumber": {
      "type": "string",
      "default": "5"
    },
    "excludedIds": {
      "type": "array"
    },
    "gap": {
      "type": "object",
      "default": {
        "default": 2
      }
    },
    "margin": {
      "type": "object",
      "default": {}
    },
    "padding": {
      "type": "object",
      "default": {}
    },
    "columns": {
      "type": "object",
      "default": {
        "default": 3
      }
    },
    "slider": {
      "type": "boolean",
      "default": false
    },
    "sliderBreakpoint": {
      "type": "number",
      "default": 0
    },
    "sliderAutoplay": {
      "type": ["boolean", "number"],
      "default": false
    },
    "sliderDisplayNavElements": {
      "type": "boolean",
      "default": true
    },
    "sliderNoLimitEdges": {
      "type": "boolean"
    }
  },
  "providesContext": {
    "queryId": "queryId"
  },
  "icon": "image-rotate",
  "textdomain": "sg-blocks",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css",
  "render": "file:./render.php"
}
